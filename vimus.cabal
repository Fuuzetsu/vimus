name:           vimus
version:        0.0.0
cabal-version:  >= 1.2
build-type:     Custom


executable vimus
  ghc-options:
    -Wall
    -fno-warn-unused-do-bind
    -threaded
    -O2

  build-depends:
      base        == 4.*
    , ncursesw    == 0.0.0
    , libmpd      == 0.4.*
    , mtl         == 1.1.*
    , IfElse      == 0.85.*
    , monad-loops == 0.3.1.*
    , containers  == 0.3.*

  hs-source-dirs:
    src

  main-is:
    Main.hs
