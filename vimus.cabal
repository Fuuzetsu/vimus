name:           vimus
version:        0.0.0
cabal-version:  >= 1.2
build-type:     Simple


executable vimus
  ghc-options:
    -Wall
    -fno-warn-unused-do-bind
    -threaded

  build-depends:
      base      >= 4   && < 5
    , ncursesw
    , libmpd    >= 0.4 && < 0.5
    , mtl       >= 1.1 && < 1.2
    , IfElse    == 0.85

  hs-source-dirs:
    src

  main-is:
    Main.hs
